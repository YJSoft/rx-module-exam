<query id="insertQuestion" action="insert">
    <tables>
        <table name="exam_question" />
    </tables>
    <columns>
        <column name="question_srl" var="question_srl" filter="number" notnull="notnull" />
        <column name="module_srl" var="module_srl" filter="number" notnull="notnull" />
        <column name="document_srl" var="document_srl" filter="number" notnull="notnull" />
        <column name="list_order" var="list_order" default="0" />
        <column name="question_level" var="question_level" default="0" filter="number" />
        <column name="question_type" var="question_type" default="0" filter="number" />
        <column name="title" var="title" notnull="notnull" />
        <column name="content" var="content" default="" />
        <column name="answer" var="answer" notnull="notnull" />
        <column name="answer1" var="answer1" default="" />
        <column name="answer2" var="answer2" default="" />
        <column name="answer3" var="answer3" default="" />
        <column name="answer4" var="answer4" default="" />
        <column name="answer5" var="answer5" default="" />
        <column name="use_description" var="use_description" default="N" />
        <column name="description_title" var="description_title" default="" />
        <column name="description" var="description" default="" />
        <column name="answer_check_type" var="answer_check_type" filter="number" />
        <column name="regdate" var="regdate" default="curdate()" />
        <column name="ipaddress" var="ipaddress" default="ipaddress()" />
        <column name="status" var="status" default="Y" />
    </columns>
</query>
